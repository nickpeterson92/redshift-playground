# Example Terraform variables file
# Copy this to terraform.tfvars and update with your values

# Basic Configuration
aws_region   = "us-east-1"
environment  = "dev"
organization = "mycompany"

# Network Configuration
vpc_cidr           = "10.0.0.0/16"
single_nat_gateway = true  # Set to false for production (HA setup)

# Harness Configuration
harness_account_id     = "YOUR_HARNESS_ACCOUNT_ID"
harness_delegate_token = "YOUR_DELEGATE_TOKEN"

# Delegate Resources
delegate_cpu      = "1024"  # 1 vCPU
delegate_memory   = "2048"  # 2 GB
delegate_replicas = 2

# Optional: Bastion Host
enable_bastion      = false
bastion_allowed_ips = ["YOUR_IP/32"]
bastion_key_name    = "your-ec2-key-pair"